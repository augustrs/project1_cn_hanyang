{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",  // Include files in your workspace
                "${workspaceFolder}/include",  // Add this if you have a local include directory
                "/Library/Developer/CommandLineTools/usr/include/c++/v1",  // C++ headers
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include"  // System headers
            ],
            "defines": [],
